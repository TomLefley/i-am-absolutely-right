# API Secret for protecting the increment endpoint
# Generate a secure random string: openssl rand -base64 32
API_SECRET=your-super-secret-api-key-here

# API Endpoints - Update with your domain
COUNTER_API_URL=https://your-domain.com/api/increment

# Redis environment variables (automatically provided by Vercel when you create Redis database)
REDIS_URL=redis://default:devpassword@localhost:6379
# Or alternatively for Vercel KV:
# KV_REST_API_URL=your-redis-rest-api-url  
# KV_REST_API_TOKEN=your-redis-rest-api-token
# KV_REST_API_READ_ONLY_TOKEN=your-redis-rest-api-read-only-token

# Frontend Configuration (NEXT_PUBLIC_ vars are exposed to browser)
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername/i-am-absolutely-right
NEXT_PUBLIC_SITE_URL=https://your-domain.com